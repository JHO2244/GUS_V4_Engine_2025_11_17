{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "gus://schemas/governance_v1.schema.json",
  "title": "GUS Governance Contract v1",
  "type": "object",
  "required": ["contract_version", "ok", "decision", "timestamp_utc", "inputs_hash", "ledger"],
  "additionalProperties": false,
  "properties": {
    "contract_version": { "type": "string", "const": "governance.v1" },
    "ok": { "type": "boolean" },
    "decision": { "type": "string", "minLength": 1 },
    "timestamp_utc": { "type": "string", "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}Z$" },
    "inputs_hash": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
    "ledger": {
      "type": "object",
      "required": ["append_mandatory", "entry_hash"],
      "additionalProperties": false,
      "properties": {
        "append_mandatory": { "type": "boolean" },
        "entry_hash": { "type": "string", "pattern": "^[a-f0-9]{64}$" }
      }
    },
    "errors": {
      "type": "array",
      "items": { "type": "string" }
    },
    "meta": {
      "type": "object",
      "additionalProperties": true
    }
  }
}
